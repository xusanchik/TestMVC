<style>

.update-form {
    margin-bottom: 15px;
}

label {
    display: block;
    margin-bottom: 5px;
}

.input {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
    margin-bottom: 10px;
}

.confirm {
    background-color: #4caf50; /* Green */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

.confirm:hover {
    background-color: #45a049;
}

/* Optional: Add some additional styling for better visual appeal */
form {
    max-width: 400px;
    margin: 0 auto;
}

/* Add more styling as needed */


</style>
@if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("ADMIN"))
{
    

    <form method="post" class="update-form" action="@Url.Action("AddTest", "Test")">
    <h1> Test</h1>
    <div class="update-form">
        <label for="question">Question:</label>
        <input type="text" class="input" id="question" name="question" required>
    </div>
    <div class="update-form">
        <label for="options">Options:</label>
        <span>A</span>
        <input type="text" class="input" id="option1" name="options[0]" required>
        <span>B</span>
        <input type="text" class="input" id="option2" name="options[1]" required>
        <span>C</span>
        <input type="text" class="input" id="option3" name="options[2]" required>
        <span>D</span>
        <input type="text" class="input" id="option4" name="options[3]" required>
    </div>
    <div class="update-form">
        <label for="right">Right Option:</label>
        <input type="text" class="input" id="right" name="RightOption" required>
    </div>
    <button type="submit" class="confirm">Add Test</button>
</form>
}